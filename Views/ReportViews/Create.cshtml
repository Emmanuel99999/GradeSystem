@{
    ViewData["Title"] = "Generate Report";
}
<h2>Generate Report</h2>
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Student</label>
        <select name="StudentId" class="form-control"
                asp-items="@(new SelectList(ViewData["Students"] as System.Collections.IEnumerable, "UserId", "Email"))"></select>
    </div>
    <div class="form-group">
        <label>Course</label>
        <select name="CourseId" class="form-control"
                asp-items="@(new SelectList(ViewData["Courses"] as System.Collections.IEnumerable, "CourseId", "CourseName"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Generate</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
