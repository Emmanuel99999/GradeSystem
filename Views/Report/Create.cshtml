@model AcademicGradingSystem.Models.Report
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Generate Report";
}

<h2>Generate Report</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Estudiante -->
    <div class="form-group mb-3">
        <label asp-for="StudentId">Student</label>
        <select asp-for="StudentId"
                class="form-control"
                asp-items="@(ViewBag.Students as IEnumerable<SelectListItem>)">
            <option value="">-- Select student --</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <!-- Curso -->
    <div class="form-group mb-3">
        <label asp-for="CourseId">Course</label>
        <select asp-for="CourseId"
                class="form-control"
                asp-items="@(ViewBag.Courses as IEnumerable<SelectListItem>)">
            <option value="">-- Select course --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Generate</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <strong>Errores del modelo:</strong>
        <ul>
            @foreach (var state in ViewData.ModelState)
            {
                foreach (var error in state.Value.Errors)
                {
                    <li><strong>@state.Key</strong>: @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
