@model AcademicGradingSystem.Models.Program

@{
    ViewData["Title"] = "Edit Program";
}

<h2>Edit Program</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProgramId" />
    <div class="form-group">
        <label asp-for="ProgramName"></label>
        <input asp-for="ProgramName" class="form-control" />
        <span asp-validation-for="ProgramName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
