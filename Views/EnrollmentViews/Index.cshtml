@model IEnumerable<AcademicGradingSystem.Models.Enrollment>
@{
    ViewData["Title"] = "Enrollments";
}
<h2>Enrollments</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Enroll Student</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th>Subject</th>
            <th>Registered</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Student.FirstName @item.Student.LastName (@item.Student.Email)</td>
            <td>@item.Course.CourseName</td>
            <td>@item.Course.Subject?.SubjectName</td>
            <td>@item.RegistrationDate.ToString("yyyy-MM-dd")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
