@model AcademicGradingSystem.Models.Enrollment
@{
    ViewData["Title"] = "Edit Enrollment";
}
<h2>Edit Enrollment</h2>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EnrollmentId" />
    <div class="form-group">
        <label>Student</label>
        <select asp-for="StudentId" class="form-control"
                asp-items="@(new SelectList(ViewData["Students"], "UserId", "Email"))"></select>
    </div>
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" class="form-control"
                asp-items="@(new SelectList(ViewData["Courses"], "CourseId", "CourseName"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
