@model AcademicGradingSystem.Models.AcademicPeriod
@{
    ViewData["Title"] = "Delete Period";
}
<h2>Delete Academic Period</h2>
<h3>Are you sure you want to delete this period?</h3>
<div>
    <h4>@Model.Name</h4>
    <p>Start: @Model.StartDate.ToShortDateString()</p>
    <p>End: @Model.EndDate.ToShortDateString()</p>
</div>
<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PeriodId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
