@model AcademicGradingSystem.Models.Grade
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Student</label>
        <select asp-for="StudentId" class="form-control"
                asp-items="@(new SelectList((IEnumerable<AcademicGradingSystem.Models.User>)ViewData["Students"], "User Id", "Email"))"></select>
    </div>
    <div class="form-group">
        <label>Plan</label>
        <select asp-for="PlanId" class="form-control"
                asp-items="@(new SelectList((IEnumerable<AcademicGradingSystem.Models.EvaluationPlan>)ViewData["Plans"], "PlanId", "ActivityName"))"></select>
    </div>
    <div class="form-group">
        <label>Score</label>
        <input asp-for="Score" class="form-control" />
    </div>
    <button type="submit">Save</button>
</form>