@model AcademicGradingSystem.Models.Grade

@{
    ViewData["Title"] = "Delete Grade";
}

<h2>Delete Grade</h2>

<h4>Are you sure you want to delete this grade?</h4>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Student</dt>
            <dd class="col-sm-10">@Model.Student?.Email</dd>

            <dt class="col-sm-2">Activity</dt>
            <dd class="col-sm-10">@Model.EvaluationPlan?.ActivityName</dd>

            <dt class="col-sm-2">Score</dt>
            <dd class="col-sm-10">@Model.Score</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="GradeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>
