@model AcademicGradingSystem.Models.Grade

@{
    ViewData["Title"] = "Edit Grade";
}

<h2>Edit Grade</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GradeId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="StudentId" class="form-label">Student</label>
        <select asp-for="StudentId"
                class="form-select"
                asp-items="@(new SelectList(
                    (IEnumerable<AcademicGradingSystem.Models.User>)ViewData["Students"],
                    nameof(AcademicGradingSystem.Models.User.UserId),
                    nameof(AcademicGradingSystem.Models.User.Email),
                    Model.StudentId
                ))">
            <option value="">-- Select student --</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PlanId" class="form-label">Plan / Activity</label>
        <select asp-for="PlanId"
                class="form-select"
                asp-items="@(new SelectList(
                    (IEnumerable<AcademicGradingSystem.Models.EvaluationPlan>)ViewData["Plans"],
                    nameof(AcademicGradingSystem.Models.EvaluationPlan.PlanId),
                    nameof(AcademicGradingSystem.Models.EvaluationPlan.ActivityName),
                    Model.PlanId
                ))">
            <option value="">-- Select activity --</option>
        </select>
        <span asp-validation-for="PlanId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Score" class="form-label">Score</label>
        <input asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
