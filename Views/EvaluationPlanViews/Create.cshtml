@model AcademicGradingSystem.Models.EvaluationPlan
<form asp-action="Create" method="post">
<div class="form-group"><label>Activity</label><input asp-for="ActivityName" class="form-control"/></div>
<div class="form-group"><label>Weight</label><input asp-for="Weight" class="form-control"/></div>
<div class="form-group"><label>Due Date</label><input asp-for="DueDate" type="date" class="form-control"/></div>
<div class="form-group"><label>Course</label><select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(ViewData["Courses"], "CourseId", "CourseName"))"></select></div>
<button type="submit">Save</button></form>