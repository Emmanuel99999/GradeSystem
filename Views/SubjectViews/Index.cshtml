@model IEnumerable<AcademicGradingSystem.Models.Subject>
@{
    ViewData["Title"] = "Subjects";
}
<h2>Subjects</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Subject</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Credits</th>
            <th>Program</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Code</td>
            <td>@item.SubjectName</td>
            <td>@item.Credits</td>
            <td>@item.Program?.ProgramName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubjectId" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SubjectId" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SubjectId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
