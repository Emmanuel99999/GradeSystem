@model AcademicGradingSystem.Models.EvaluationPlan
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Activity</label>
        <input asp-for="ActivityName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Weight</label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label>Due Date</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" class="form-control"
                asp-items="@(new SelectList((IEnumerable<AcademicGradingSystem.Models.Course>)ViewData["Courses"], "CourseId", "CourseName"))"></select>
    </div>
    <button type="submit">Save</button>
</form>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <strong>Errores del modelo:</strong>
        <ul>
            @foreach (var state in ViewData.ModelState)
            {
                foreach (var error in state.Value.Errors)
                {
                    <li><strong>@state.Key</strong>: @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}