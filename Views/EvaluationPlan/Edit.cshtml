@model AcademicGradingSystem.Models.EvaluationPlan

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PlanId" />
    <div class="form-group">
        <label>Activity</label>
        <input asp-for="ActivityName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Weight</label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label>Due Date</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" class="form-control"
                asp-items="@(new SelectList((IEnumerable<AcademicGradingSystem.Models.Course>)ViewData["Courses"], "CourseId", "CourseName"))"></select>
    </div>
    <button type="submit">Save</button>
</form>