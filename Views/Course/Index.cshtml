@model IEnumerable<AcademicGradingSystem.Models.Course>
@{
    ViewData["Title"] = "Courses";
}
<h2>Courses</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Course</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Period</th>
            <th>Teacher</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.CourseName</td>
            <td>@item.Subject?.SubjectName</td>
            <td>@item.AcademicPeriod?.Name</td>
            <td>@item.Teacher?.FirstName @item.Teacher?.LastName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
