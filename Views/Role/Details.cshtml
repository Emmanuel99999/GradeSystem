@model AcademicGradingSystem.Models.Role
@{
    ViewData["Title"] = "Role Details";
}
<h2>Role Details</h2>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.RoleName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Users in Role</dt>
        <dd class="col-sm-10">
            @if (Model.Users != null && Model.Users.Any())
            {
                <ul>
                @foreach (var u in Model.Users)
                {
                    <li>@u.FirstName @u.LastName (@u.Email)</li>
                }
                </ul>
            }
            else
            {
                <span>No users assigned.</span>
            }
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
