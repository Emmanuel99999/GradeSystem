@model AcademicGradingSystem.Models.Subject
@{
    ViewData["Title"] = "Create Subject";
}
<h2>Create Subject</h2>
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="SubjectName"></label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Program</label>
        <select asp-for="ProgramId" class="form-control"
                asp-items="@(new SelectList((IEnumerable<SelectListItem>)ViewData["Programs"], "ProgramId", "ProgramName"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
