@{
    ViewData["Title"] = "Academic Grading System";
}

<div class="container-fluid">

    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">Academic Grading System</h1>
        <p class="lead">Comprehensive academic management system</p>
        <hr class="my-4">
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Academic Periods</h5>
                    <p class="card-text">Manage academic terms and semesters</p>
                    <a href="@Url.Action("Index", "AcademicPeriod")" class="btn btn-primary">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Courses</h5>
                    <p class="card-text">Manage courses and subjects</p>
                    <a href="@Url.Action("Index", "Course")" class="btn btn-success">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Grades</h5>
                    <p class="card-text">Manage evaluations and scores</p>
                    <a href="@Url.Action("Index", "Grade")" class="btn btn-warning">Access</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage students and teachers</p>
                    <a href="@Url.Action("Index", "User")" class="btn btn-info">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user-shield fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Roles</h5>
                    <p class="card-text">Manage user roles</p>
                    <a href="@Url.Action("Index", "Role")" class="btn btn-primary">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-clipboard-list fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Enrollments</h5>
                    <p class="card-text">Manage course enrollments</p>
                    <a href="@Url.Action("Index", "Enrollment")" class="btn btn-secondary">Access</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-tasks fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Evaluation Plans</h5>
                    <p class="card-text">Configure assessment activities and weights</p>
                    <a href="@Url.Action("Index", "EvaluationPlan")" class="btn btn-danger">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-3x text-dark mb-3"></i>
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">Generate academic reports</p>
                    <a href="@Url.Action("Index", "Report")" class="btn btn-dark">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-graduation-cap fa-3x text-purple mb-3"></i>
                    <h5 class="card-title">Subjects</h5>
                    <p class="card-text">Manage subjects and programs</p>
                    <a href="@Url.Action("Index", "Subject")" class="btn btn-purple" style="background-color: #6f42c1; color: white;">Access</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-layer-group fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Programs</h5>
                    <p class="card-text">Manage academic programs</p>
                    <a href="@Url.Action("Index", "Program")" class="btn btn-success">Access</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">System Overview</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h3 class="text-primary">150</h3>
                            <p class="text-muted">Active Students</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-success">25</h3>
                            <p class="text-muted">Active Courses</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-warning">8</h3>
                            <p class="text-muted">Academic Periods</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-info">12</h3>
                            <p class="text-muted">Teachers</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<style>
    .btn-purple {
        background-color: #6f42c1;
        border-color: #6f42c1;
        color: white;
    }

        .btn-purple:hover {
            background-color: #5a2d91;
            border-color: #5a2d91;
            color: white;
        }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .text-purple {
        color: #6f42c1 !important;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
