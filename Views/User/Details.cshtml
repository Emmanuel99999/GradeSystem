@model AcademicGradingSystem.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.FullName</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.Role?.RoleName</dd>

            <dt class="col-sm-2">Active</dt>
            <dd class="col-sm-10">
                @(Model.IsActive ? "Yes" : "No")
            </dd>
        </dl>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
