@model AcademicGradingSystem.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role?.RoleName</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
