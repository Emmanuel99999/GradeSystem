@model IEnumerable<AcademicGradingSystem.Models.AcademicProgram>

@{
    ViewData["Title"] = "Programs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Programs</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Program</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th scope="col">Program Name</th>
                <th scope="col">Description</th>
                <th scope="col"># Subjects</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProgramName</td>
                    <td>@item.Description</td>
                    <td>@(item.Subjects?.Count ?? 0)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ProgramId" class="btn btn-sm btn-warning me-1" title="Edit">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ProgramId" class="btn btn-sm btn-info me-1" title="Details">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ProgramId" class="btn btn-sm btn-danger" title="Delete"
                           onclick="return confirm('Are you sure you want to delete this program?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No programs found.</td>
            </tr>
        }
        </tbody>
    </table>
</div>
