@model IEnumerable<AcademicGradingSystem.Models.AcademicPeriod>
@{
    ViewData["Title"] = "Academic Periods";
}
<h2>Academic Periods</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Period</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Name</td>
            <td>@item.StartDate.ToShortDateString()</td>
            <td>@item.EndDate.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PeriodId" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PeriodId" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PeriodId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
